mixin settingsForm()
    form.form(action="/settings" method="POST")
        h2 Create page
        label(for="sitename") Site name
        input(type="text" name='sitename' placeholder="Untitled website") 
        label(for="root_path") Domain Name / Root path
        input(type="text" name='root_path')
        fieldset(name="extended_syntax")
            legend Allow the following types of syntax
            input(type="checkbox" name='markdown' value="true")
            label(for="markdown") Markdown 
            input(type="checkbox" name='html' value="true")
            label(for="html") HTML 
            input(type="checkbox" name='pug' value="true")
            label(for="pug") pug 
            input(type="checkbox" name='jsx' value="true")
            label(for="jsx") jsx 
            input(type="checkbox" name='ejs' value="true")
            label(for="ejs") ejs
        input(type="radio" id='multi' name='multipage' value='true') 
        label(for='multi') Multipage site
        input(type="radio" id='single' name='multipage' value='false')
        label(for='single') Single page site
        input.button(type="submit" value="Save")

        
          
        